<UserControl x:Class="GoogleCloudExtension.MySQLInstaller.MySQLInstallerWindowContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GoogleCloudExtension.MySQLInstaller"
             xmlns:theming="clr-namespace:GoogleCloudExtension.Theming"
             mc:Ignorable="d" 
             d:DesignHeight="225" d:DesignWidth="300">
    
    <UserControl.Resources>
        <StackPanel x:Key="content">
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="WrapWithOverflow" Margin="5">
                To add a Google Cloud SQL database as a Data Connection "MySQL for Visual Studio" must be installed.
                It is highly recommended that the "MySQL Connector/Net" also be installed to be able to properly interact with the database.
            </TextBlock>
            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="WrapWithOverflow" Margin="5">
                Download and install the MySQL Installer which will guide you through installing the needed extensions.
                After they are installed restart Visual Studio.
            </TextBlock>
        </StackPanel>
    </UserControl.Resources>

    <theming:CommonDialogWindowBaseContent DialogContent="{StaticResource content}">
        <theming:CommonDialogWindowBaseContent.Buttons>
            <theming:DialogButtonInfo Caption="Download"
                                      IsDefault="True"
                                      Command="{Binding DataContext.DownloadCommand, Source={StaticResource content}}"/>
            <theming:DialogButtonInfo Caption="Cancel" IsCancel="True" />
        </theming:CommonDialogWindowBaseContent.Buttons>
    </theming:CommonDialogWindowBaseContent>
</UserControl>
